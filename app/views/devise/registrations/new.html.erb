<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
    <div class="text-center">
      <h1>Pro Account</h1>
      <p>Get full access including contacting other members</p>
    </div>
    <% else -%>
    <div class="text-center">
      <h1>Basic Plan</h1>
      <p>Sign Up for free and get basic access ...</p>
    </div>
    <% end -%>
  </div>
  <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Sign up</h2>
          <% if params[:plan] == '2' %>
            <%= render 'pro_form' %>
          <% else %>
            <%= render 'basic_form' %>
          <% end -%>

          <%= render "devise/shared/links" %>
      </div>  
  </div>
</div>
